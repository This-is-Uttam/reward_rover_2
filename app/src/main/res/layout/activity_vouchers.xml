<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.VouchersActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/voucherToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_surface"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/arrow_left_24"
        app:navigationIconTint="@color/black"
        app:title="Vouchers" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/voucherTablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_surface"
        app:layout_constraintTop_toBottomOf="@+id/voucherToolbar" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/voucherVp2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voucherTablayout" />

</androidx.constraintlayout.widget.ConstraintLayout>